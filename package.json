{
  "name": "react-user-crud-monorepo",
  "version": "1.0.0",
  "description": "React + TypeScript + Vite + MUI CRUD application with JSON Server backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "npm run dev:backend",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["react", "typescript", "vite", "mui", "crud", "json-server", "monorepo"],
  "author": "",
  "license": "MIT"
}
